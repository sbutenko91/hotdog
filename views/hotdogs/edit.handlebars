{{#each errors}}

<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}

<div class="card form-card card-body">
    <h3 class="text-center">Edit hot dog</h3>
    <form action="/hotdogs/{{hotdog.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="type">Name</label>
            <input type="text" class="form-control shadow-none" name="type" value="{{hotdog.type}}">
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control shadow-none" name="image" value="{{hotdog.imageUrl}}">
        </div>
        <div class="form-group">
            <label for="ingredients">Ingredients</label>
            <pre><textarea type="text" class="form-control shadow-none" name="ingredients">{{hotdog.ingredients}}</textarea></pre>
        </div>
        <button type="submit" class="btn btn-primary shadow-none">Update hot dog</button>
    </form>
</div>
